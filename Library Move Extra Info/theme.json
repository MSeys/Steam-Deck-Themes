{
  "name": "Library Move Extra Info",
  "author": "Matthias, RasitAyaz",
  "version": "v1.4",
  "manifest_version": 3,
  "target": "Library",
  "description": "This is a theme that moves the extra info closer to the banner.",
  "inject": {
    "shared.css": ["SP", "MainMenu", "QuickAccess"]
  },
  "patches": {
    "Horizontal Align": {
      "default": "Left when highlighted",
      "type": "dropdown",
      "values": {
        "Left": {
          "horizontal-align/left.css": ["SP"]
        },
        "Left when highlighted": {
          "horizontal-align/left-when-highlighted.css": ["SP"]
        },
        "Center": {},
        "Right": {
          "horizontal-align/right.css": ["SP"]
        }
      }
    },
    "Align Mid": {
      "type": "checkbox",
      "values": {
        "No": {},
        "Yes": {
          "alignmid.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    },
    "Use Obsidian": {
      "type": "checkbox",
      "values": {
        "No": {},
        "Yes": {
          "useobsidian.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    },
    "Roundedness": {
      "default": "10px",
      "type": "slider",
      "values": {
        "3px": { "roundedness/3px.css": ["SP", "MainMenu", "QuickAccess"] },
        "5px": { "roundedness/5px.css": ["SP", "MainMenu", "QuickAccess"] },
        "10px": { "roundedness/10px.css": ["SP", "MainMenu", "QuickAccess"] },
        "15px": { "roundedness/15px.css": ["SP", "MainMenu", "QuickAccess"] },
        "20px": { "roundedness/20px.css": ["SP", "MainMenu", "QuickAccess"] },
        "30px": { "roundedness/30px.css": ["SP", "MainMenu", "QuickAccess"] }
      }
    }
  }
}
