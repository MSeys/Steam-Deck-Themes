{
  "name": "Library Move Extra Info",
  "author": "Matthias, RasitAyaz",
  "version": "v1.4",
  "manifest_version": 3,
  "target": "Library",
  "description": "This is a theme that moves the extra info closer to the banner.",
  "inject": {
    "shared.css": ["SP", "MainMenu", "QuickAccess"]
  },
  "patches": {
    "Horizontal Align": {
      "default": "Left when highlighted",
      "type": "dropdown",
      "values": {
        "Left": {
          "horizontal-align/left.css": ["SP"]
        },
        "Left when highlighted": {
          "horizontal-align/left-when-highlighted.css": ["SP"]
        },
        "Center": {
          "horizontal-align/center.css": ["SP"]
        },
        "Right": {
          "horizontal-align/right.css": ["SP"]
        }
      }
    },
    "Align Mid": {
      "default": "Yes",
      "type": "checkbox",
      "values": {
        "No": {},
        "Yes": {
          "alignmid.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    },
    "Use Obsidian": {
      "type": "checkbox",
      "values": {
        "No": {},
        "Yes": {
          "useobsidian.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    },
    "Roundedness": {
      "default": "10px",
      "type": "slider",
      "values": {
        "0px": {
          "--library-extra-info-radius-size": ["0px", "SP"]
        },
        "3px": {
          "--library-extra-info-radius-size": ["3px", "SP"]
        },
        "5px": {
          "--library-extra-info-radius-size": ["5px", "SP"]
        },
        "10px": {
          "--library-extra-info-radius-size": ["10px", "SP"]
        },
        "Full": {
          "--library-extra-info-radius-size": ["100px", "SP"]
        }
      }
    }
  }
}
